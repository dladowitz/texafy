!!! 5
%html(lang="en-US")
  %head
    %title= project_name
    %link{:href => "#{root_url}", :rel => "canonical"}/
    %meta{:content => "#{project_name}", :property => "og:site_name"}/
    %meta{:content => "#{project_name}", :property => "og:title"}/
    %meta{:content => "#{root_url}", :property => "og:url"}/
    %meta{:content => "website", :property => "og:type"}/
    %meta{:content => "#{project_description}", :property => "og:description"}/
    %meta{:content => "#{root_url}/assets/background/hero_text_2.png", :property => "og:image"}/
    %meta{:content => "#{project_name}", :itemprop => "name"}/
    %meta{:content => "#{root_url}", :itemprop => "url"}/
    %meta{:content => "#{project_name}", :name => "twitter:title"}/
    %meta{:content => "#{root_url}", :name => "twitter:url"}/
    %meta{:content => "summary", :name => "twitter:card"}/
    %meta{:content => "#{project_description}", :name => "description"}/

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-71845865-1', 'auto');
      ga('send', 'pageview');


  %body

    #wrapper
      = render "layouts/sidebar"

      #page-wrapper.gray-bg
        = render "layouts/flash_messages"

        .wrapper.wrapper-content.animated.fadeInRight
          = yield

        = render "layouts/footer"
